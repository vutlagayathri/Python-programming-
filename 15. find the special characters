def count_special_characters(statement):
    special_characters = 0
    for char in statement: 
        if not char.isalnum() and char != ' ':
            special_characters += 1
    return special_characters 
statement = input("Enter the statement: ") 
special_char_count = count_special_characters(statement) 
print("Number of special characters in the statement:", special_char_count)
